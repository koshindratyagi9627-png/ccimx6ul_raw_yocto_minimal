 }
 
 V4L2Queue::~V4L2Queue() {
@@ -1127,6 +1263,9 @@ V4L2Queue::~V4L2Queue() {
     VQLOGF(1) << "Failed to deallocate queue buffers";
   }
 
+  if(g2d_close && g2d_handle)
