@@ -1112,6 +1244,10 @@ V4L2Queue::V4L2Queue(const IoctlAsCallback& ioctl_cb,
   VPLOG_IF(4, supports_requests_)
       << "This queue does " << (supports_requests_ ? "" : "not")
       << " support requests.";
