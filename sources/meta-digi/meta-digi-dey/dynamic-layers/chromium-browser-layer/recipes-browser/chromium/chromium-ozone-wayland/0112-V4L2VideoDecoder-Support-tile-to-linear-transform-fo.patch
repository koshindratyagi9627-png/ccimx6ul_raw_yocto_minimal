   const IoctlAsCallback ioctl_cb_;
   const MmapAsCallback mmap_cb_;
   std::vector<void*> plane_mappings_;
+  int dmafd0;
+  int dmafd1;
+  unsigned long phys_0;
+  unsigned long phys_1;
