@@ -970,6 +971,8 @@ PIN_SD3_DATA2        OWNER
 PIN_SD3_DATA3        OWNER
 PIN_UART1_RXD        OWNER, test
 PIN_UART1_TXD        OWNER
+PIN_UART2_RXD        OWNER
+PIN_UART2_TXD        OWNER
 PIN_XSPI1_DATA0      OWNER
 PIN_XSPI1_DATA1      OWNER
 PIN_XSPI1_DATA2      OWNER
